<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleLayout"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            app:tint="@color/dark_purple" />

        <TextView
            android:id="@+id/tvManualReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_manual_report"
            android:textColor="@color/dark_purple"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Mô tả sự cố -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Mô tả sự cố"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:background="@android:drawable/editbox_background" />

        <!-- Đính kèm hình ảnh -->
        <Button
            android:id="@+id/btnAddPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm ảnh"
            android:drawableStart="@drawable/ic_add_photo"
            android:layout_marginTop="16dp" />

        <!-- Vị trí -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vị trí:"
            android:layout_marginTop="16dp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/darker_gray">
            <!-- Bản đồ hiển thị tại đây -->
        </FrameLayout>
        <Button
            android:id="@+id/btnGetLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lấy vị trí của tôi"
            android:layout_marginTop="8dp" />

        <!-- Loại sự cố -->
        <Spinner
            android:id="@+id/spinnerPotholeType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <!-- Thông tin liên hệ -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại (tùy chọn)"
            android:inputType="phone"
            android:layout_marginTop="16dp" />

        <!-- Nút gửi -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi báo cáo"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/dark_purple"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
