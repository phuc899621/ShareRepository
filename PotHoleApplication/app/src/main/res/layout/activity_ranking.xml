<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".RankingActivity">

   <androidx.constraintlayout.widget.Guideline
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/guideTop"
       android:orientation="horizontal"
       app:layout_constraintGuide_percent="0.05"
   />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideBottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideLeft"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideRight"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/layout"
        android:background="@drawable/corner_sheet"
        app:layout_constraintTop_toBottomOf="@id/guideTop"
        app:layout_constraintBottom_toTopOf="@id/guideBottom"
        app:layout_constraintLeft_toRightOf="@id/guideLeft"
        app:layout_constraintRight_toLeftOf="@id/guideRight"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/titleLayout"
            app:layout_constraintTop_toTopOf="parent"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitle"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/dark_purple"
                android:text="@string/str_ranking"
                android:gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBack"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_back"
                android:background="@android:color/transparent"
                android:layout_margin="5dp"
                app:tint="@color/dark_purple"
                />

        </FrameLayout>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideMiddleSheet"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imaUser"
            android:src="@drawable/ic_actress"
            app:layout_constraintTop_toBottomOf="@id/titleLayout"
            app:layout_constraintBottom_toTopOf="@id/guideMiddleSheet"
            app:layout_constraintRight_toRightOf="@id/titleLayout"
            app:layout_constraintLeft_toLeftOf="@id/titleLayout"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardView"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/imaUser"
            app:layout_constraintRight_toRightOf="@id/imaUser"
            app:layout_constraintLeft_toLeftOf="@id/imaUser">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/ranking"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:id="@+id/tvRanking"
                    android:gravity="center"
                    android:textColor="@color/dark_purple"
                    />
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="wewerewrw"
                android:id="@+id/tvName"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="16sp"
                android:textColor="@color/dark_purple"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:background="@drawable/corner_ranking"
                android:layout_margin="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp"
                    android:text="300"
                    android:id="@+id/tvPoints"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/dark_purple"

                    />
            </LinearLayout>
        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            tools:layout_editor_absoluteX="5dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
